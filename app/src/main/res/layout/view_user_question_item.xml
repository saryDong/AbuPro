<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/question_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Question"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:transitionName="@string/question_title_transition"
        android:layout_below="@id/avatar"/>

    <TextView
        android:id="@+id/question_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_title"
        android:layout_marginTop="10dp"
        android:maxLines="5"
        android:ellipsize="end"
        android:transitionName="@string/question_des_transition"
        android:text="Answer"/>


    <TextView
        android:id="@+id/favour_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_favorite"
        android:drawablePadding="8dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/primary_light"
        android:drawableTint="@color/primary_light"
        android:layout_below="@id/question_description"
        android:text="0"/>

    <TextView
        android:id="@+id/answer_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_comment"
        android:drawablePadding="8dp"
        android:layout_toRightOf="@id/favour_count"
        android:textColor="@color/primary_light"
        android:drawableTint="@color/primary_light"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@id/favour_count"
        android:text="0"/>


    <TextView
        android:id="@+id/publish_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/primary_light"/>
</RelativeLayout>